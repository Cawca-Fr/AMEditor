<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.AMEditor" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <item name="toolbarStyle">@style/Widget.AMEditor.Toolbar</item>
    </style>

    <style name="Widget.AMEditor.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.AMEditor.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.AMEditor.Toolbar.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>